{% extends 'dalam.jade' %} 
{% block isi %}
.row-fluid
	.span8
		h1 {{ jenis.nama }}
		h1
			small Daftar Item
		.well
			h4 Tambah Item
			form(action="", method="post")
				{% csrf_token %}
				{{ form }}
				br
				button.btn(type="submit", 
					value="item_baru",
					name="submit"
					) Item Baru

		h4 Daftar Item

		{% for it in item %}
		p
			a(href="{{ it.nama }}/") {{ it }}
		ul
			li Status:
			li Dipinjam:
			form(method="POST", action="")
				{% csrf_token %}
				input(type="hidden", name="pk_item",
				 value="{{ it.pk }}")
				button.btn(type="submit",
					name="submit",
					value="tambah_keranjang") 
					| Masukkan keranjang
		hr
		{% endfor %}
	.span4
		.well
			h4 Data
			| Tersedia sejak
			p {{ jenis.didaftar|date:"d M Y" }}
			| Sewa per unit
			p Rp. {{ jenis.sewa_per_unit }}
{% endblock isi %}